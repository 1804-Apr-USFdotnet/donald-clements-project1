@model Restaurant

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Restaurant</h4>
    <hr/>
    <p>
        @Html.ActionLink("Edit", "Edit", new {id = Model.RestaurantID}) |
        @Html.ActionLink("Back to List", "Index")
    </p>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.RestaurantName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RestaurantName)
        </dd>

        <dt>
            @Html.DisplayName("Rating")
        </dt>

        <dd>
           @Model.Rating()
        </dd>

        <dt>
            @Html.DisplayName("Address")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AddressLineOne)
        </dd>

        <dt>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.City), @Html.DisplayFor(model => model.StateCode) @Html.DisplayFor(model => model.PostalCode)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Phone)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phone)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Website)
        </dt>

        @if (Model.Website == "NA")
        {
            <dd>NA</dd>
        }
        else
        {
            <dd>
                @Html.DisplayFor(model => model.Website)
            </dd>
        }

    </dl>
</div>


    @Html.Partial("_ReviewsByIDToList", (IEnumerable<Review>) ViewBag.rev)
